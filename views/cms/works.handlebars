{{#section 'scripts'}}
    <script>
        $(document).ready(function () {
            var options = {
                element: '#box-body',
                position: 'absolute',
                type: 'minimalist',
                z_index: 2000,
                delay: 2000,
                offset: {x: 0, y: 200},
                progressbar: false,
                placement: {
                    from: 'bottom',
                    align: 'center'
                }
            };
            $('.delete').on('click', function () {
                var obj = $(this).parent('td').parent('tr');
                var url = $(this).attr('href');
                if (confirm('此操作不可返回,是否继续?')){
                    $.ajax({
                        url: url,
                        dataType: 'json',
                        success: function (data) {
                            if (data.code == 0)
                                obj.remove();
                            else
                                    $.notify(data.message, options);
                        }
                    })
                    obj.remove();
                }

                return false;
            })
        });
    </script>
